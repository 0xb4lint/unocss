{
  "name": "@hummin/monorepo",
  "private": true,
  "version": "0.0.0-alpha.0",
  "scripts": {
    "build": "pnpm -r --parallel --filter !playground run build",
    "dev": "pnpm -r --parallel --filter !playground run dev",
    "lint": "eslint \"**/*.{ts,vue,mjs}\"",
    "lint:fix": "nr lint -- --fix",
    "play": "npm -C playground run dev",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag && pnpm -r publish",
    "test": "jest",
    "test:update": "jest -u"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.9.0",
    "@antfu/ni": "^0.9.3",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.2",
    "bumpp": "^7.1.1",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.5.0",
    "esno": "^0.10.0",
    "jest": "^27.2.4",
    "ts-jest": "^27.0.5",
    "tsup": "^5.2.1",
    "typescript": "^4.4.3",
    "hummin": "workspace:*",
    "@hummin/core": "workspace:*",
    "@hummin/vite": "workspace:*",
    "@hummin/preset-default": "workspace:*",
    "@hummin/preset-attributify": "workspace:*"
  }
}
